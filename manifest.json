{
  "manifest_version": 2,
  "name": "SeigaDL",
  "version": "0.4.0",

  "description": "A simple extension to make downloading a seiga easier",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://seiga.nicovideo.jp/seiga/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "downloads",
    "*://*.nicovideo.jp/*",
    "*://*.nicoseiga.jp/*"
  ]
}
