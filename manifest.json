{
  "manifest_version": 2,
  "name": "SeigaDL",
  "version": "0.3.0",

  "description": "A simple extension to make downloading a seiga easier",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://seiga.nicovideo.jp/seiga/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "downloads",
    "https://*.nicovideo.jp/*",
    "https://*.nicoseiga.jp/*"
  ]
}
